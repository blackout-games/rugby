<h3>Login</h3>

<div {{bind-attr class="loginErrorMessage::hidden"}}>
  <div class="alert alert-warning alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>{{loginErrorMessage}}</strong>
  </div>
</div>

<form {{action "submit" on='submit'}}>

  {{validated-input type="text" placeholder="Username" value=identification errors=errors.identification validationEvent=validationEvent }}

  {{validated-input type="password" placeholder="Password" value=password errors=errors.password validationEvent=validationEvent }}

  <div class="form-group">
    <button {{action "submit"}} class="btn btn-default ">Login</button>
    {{messages.logging-in}}
  </div>

</form>