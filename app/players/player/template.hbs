{{top-level images="squad" mobileHigher=true}}


<div class="row show-overflow row-max-md">
  <div class="col-12 dash-box-container show-overflow">
    
    {{player-ui player=model.player stats=model.stats history=model.history singleMode=true squad=model.squad}}
    {{outlet}}
    
  </div>
</div>
  
{{#sub-nav-content keepSubRoutes=true buttonIcon="icon-team"}}
  
  <div class="sub-nav-inner-padding">
    
    {{#each model.squad as |player index|}}
      
      {{#link-to 'players.player' player.id id=(concat 'sub-menu-link-' player.id) class="menu-link nowrap btn-a"}}
        <div class="row row-nowrap">
        
          <div class="col-auto opacity-4">
            <div class="player-avatar player-avatar-sub-nav"></div>
          </div>
          
          <div class="col-flex vc-parent right-gap-lg ellipses">
            <div class="ellipses">{{player.name}}</div>
          </div>
          
          {{#if player.transfer}}
          <div class="col-auto vc-parent">
            <i class="icon-tag icon-lg for-sale-color"></i>
          </div>
          {{/if}}
          
        </div>
      {{/link-to}}
    
    {{/each}}
    
  </div>
    
{{/sub-nav-content}}