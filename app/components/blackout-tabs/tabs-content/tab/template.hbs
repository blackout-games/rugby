{{#if isShowing}}
  <div class="blackout-tab {{if (or isLoadingData (and loadTabsImmediatelyWithLoader isLoadingTab)) 'hidden'}} {{if (and (not hasFaded) (not isLoadingTab)) 'animated fadeIn'}}">
    {{yield (hash
      registerTabLoading=(action 'registerTabLoading')
      finishTabLoading=(action 'finishTabLoading')
    )}}
  </div>
{{/if}}

{{#if (or isLoadingData (and loadTabsImmediatelyWithLoader isLoadingTab))}}
  <div class="{{if noPadding 'loader-padding' 'dash-loader-padding'}}">
    {{loading-spinner color="light"}}
  </div>
{{/if}}

