<div class="blackout-tabs-content-container">
  {{#side-switcher
    direction=tabDirection
    currentlyShowing=(readonly switcherTab)
    receivePanels=receivePanels
    allowAnimation=false }}

    {{yield (hash
      tab=(component 'blackout-tabs/tabs-content/tab'
        isSubTabs=(readonly isSubTabs)
        parentTab=(readonly parentTab)
        resetOn=(readonly resetOn)
        currentlyShowing=(readonly yieldTab)
        wasViaURL=(readonly wasViaURL)
        loadTabsImmediatelyWithLoader=loadTabsImmediatelyWithLoader
        onTabChange=onTabChange
        loaderColor=loaderColor
      )
    )}}
    
  {{/side-switcher}}
</div>