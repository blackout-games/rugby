{{#component (if horizontal 'horizontal-collection' 'vertical-collection')
  tagName=collectionTag
  content=contentProxy
  defaultHeight=defaultHeight
  defaultWidth=defaultWidth
  alwaysUseDefaultHeight=false
  alwaysUseDefaultWidth=false
  useContentProxy=useContentProxy
  lastReached=lastReached
  bufferSize=bufferSize
  containerSelector=scrollerSelectorProp
  as |item index|
}}
  
  {{#if itemClass}}

    {{! Be sure not to add margins to this div}}
    <div class="{{unless horizontal 'clearfix'}}">
      <div class="{{itemClass}}">
        {{yield item index}}
      </div>
    </div>
    
  {{else}}

    {{! Be sure not to add margins to this div}}
    <div class="{{unless horizontal 'clearfix'}}">
      {{yield item index}}
    </div>
    
  {{/if}}
  
{{/component}}

{{#if isLoadingData}}
  <div class="loader-padding">
    {{loading-spinner class="gap-2x" color="light"}}
  </div>
{{/if}}
