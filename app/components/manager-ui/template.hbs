{{#if inline}}
  
  {{#if stacked}}
    
    <div class="inline-block">
      <div class="text-center">
        {{user-image type='manager' defaultColor=defaultColor manager=manager size=imageSize isCurrentUserImage=isCurrentUserImage}}
      </div>
      <div>
        <span>{{if text text manager.username}}</span>
      </div>
    </div>
    
  {{else}}
    
    <span class="nowrap">
      {{user-image type='manager' defaultColor=defaultColor manager=manager isCurrentUserImage=isCurrentUserImage size='small' class="manager-avatar-inline no-right-gap left-gap-xs" debug=debug}}
      <span class="btn-a-hover">{{if text text manager.username}}</span>
    </span>
    
  {{/if}}
  
{{else}}
    
  <div class="{{unless stacked "row row-nowrap"}}">
    <div class="{{unless stacked "col-auto right-gap-md"}} text-center">
      {{user-image type='manager' defaultColor=defaultColor manager=manager size=imageSize isCurrentUserImage=isCurrentUserImage}}
    </div>
    <div class="{{unless stacked "col-auto vc-parent"}}">
      <span>{{if text text manager.username}}</span>
    </div>
  </div>
  
{{/if}}