{{#if inline}}

  <span class="nowrap">
    {{user-image type='manager' defaultColor='dark' manager=manager size='small' class="manager-avatar-inline no-right-gap left-gap-xs"}}
    <span class="btn-a-hover">{{if text text manager.username}}</span>
  </span>
  
{{else}}
  
  <div class="{{unless stacked "row row-nowrap"}}">
    <div class="{{unless stacked "col-auto right-gap-md"}} text-center">
      {{user-image type='manager' defaultColor='dark' manager=manager size=imageSize}}
    </div>
    <div class="{{unless stacked "col-auto vc-parent"}}">
      <span>{{if text text manager.username}}</span>
    </div>
  </div>
  
{{/if}}