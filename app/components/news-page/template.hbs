{{page-header title=title images="news" route=storeType }}



<div class="row">
  <div class="col-md-7 dash-box-container news-page-container">
    <div class="dash-box">
      
      {{back-button to="dashboard"}}
      
      {{#each model key="id" as |article|}}
      
        <div class="gap-3x">
          <h2>{{#link-to articleRoute article.id}}{{article.title}}{{/link-to}}</h2>
          
          {{#if article.img}}
            
            {{#link-to articleRoute article.id}}
              {{fade-bg showLoader=true imageUrl=article.img bgClass="dash-news-image" class="gap-md" }}
            {{/link-to}}
          
          {{/if}}
          
          <p class="gap-sm">
            
            {{{article.short}}}
            
            {{#if article.hasMoreToRead}}
              {{#link-to articleRoute article.id class="nowrap"}}{{t 'dashboard.news.read-more'}}{{/link-to}}
            {{/if}}
            
          </p>
          
          <div class="news-date">
            {{#if article.isNewToUser}}<b>{{t 'dashboard.news.new'}}</b> &bullet;{{/if}}
            {{date-ui date=article.date class="news-date"}}
            {{#if article.author}}
              {{t 'dashboard.news.by-manager' manager=(manager article.author)}}
            {{/if}}
            {{#if article.country}}
              {{t 'dashboard.news.in-country' country=(country article.country class="nowrap")}}
            {{/if}}
          </div>
          
        </div>
        
      {{/each}}

      {{#infinite-scroll content=model hasMore=hasMore scrollable=scrollerSelector}}
        {{loading-spinner class="gap-2x" color="light"}}
      {{/infinite-scroll}}
      
    </div>
  </div>
</div>