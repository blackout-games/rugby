{{#component 'dash-tabs/sub-tabs' class="no-gap show-overflow" tabGroup="player-manage" tabRoute="manage" onTabChange=(action 'tabChanged') isOnScreen=(readonly isOnScreen) as |tabs| }}
  
  {{#tabs.list as |list|}}
    
    {{list.tab tab="player-manage-actions-panel" name-t="player.manage.actions" icon-class="icon-wrench icon-lg tab-icon-straight" }}
    
    {{list.tab tab="player-manage-customise-panel" name-t="player.manage.customise" icon-class="icon-pencil icon-lg tab-icon-straight" }}
    
  {{/tabs.list}}
  
  
  {{#tabs.content as |content|}}
    
    
    {{#content.tab id="player-manage-actions-panel"}}
      
      {{player-ui/player-manage/actions player=player isOnScreen=(and (readonly isOnScreen) (is 'player-manage-actions-panel' selectedTab))}}
      
    {{/content.tab}}
    
    
    {{#content.tab id="player-manage-customise-panel"}}
      
      {{player-ui/player-manage/customise player=player isOnScreen=(and (readonly isOnScreen) (is 'player-manage-customise-panel' selectedTab))}}
      
    {{/content.tab}}
    
    
  {{/tabs.content}}
  
{{/component}}









