{{#user-image
  url=player.imageUrl
  placeholderUrl='/assets/images/user/manager-light.png'
  size=size
  defaultColor='light'
  editable=isOwned
  class=(if isOwned 'gap-md')
  onSave=(action 'savePlayerImage')
  showAvatarLinks=true
  incomingWrapperClass=wrapperClass
  hideEditIndicators=hideEditIndicators
  shadow=true
  as |section|
}}
  
  {{#if (is 'editorFinal' section)}}
    
    {{#if clubIsNotPremium}}
    <div class="color-bg-text full warning text-center gap-2x">
      {{premium-ui messageT='premium.player-avatars' club=player.club}}
    </div>
    {{/if}}
    
  {{/if}}
  
{{/user-image}}