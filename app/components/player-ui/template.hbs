
{{#if singleMode}}
  
  <div class="{{if flatTitleMode 'center-parent-md top-gap-md'}} has-position">
    
    {{back-button to='squad.club' toId='me' class="player-ui-back"}}
    {{player-ui/nav-button class="left" squad=squad currentPlayer=player}}
    {{player-ui/nav-button class="right" squad=squad currentPlayer=player}}
    
    <div class="row row-flex">
      <div class="col-xs-12 {{if flatTitleMode 'col-flex-md pad-right-md'}}  center-parent">
        <div class="player-avatar player-avatar-single"></div>
      </div>
      
      <div class="gap-sm {{if flatTitleMode 'hidden-md-up'}} divider"></div>
      
      <div class="col-xs-12 {{if flatTitleMode 'col-flex-md pad-right-md'}} center-parent">
        <h2 class="player-ui-title-single no-wrap reset-box ellipses">{{player.name}}</h2>
        {{flag-icon country=player.nationality size=(if media.isMobile 'medium' 'big')}}
        {{flag-icon country=player.dualNationality size=(if media.isMobile 'medium' 'big')}}
      </div>
    </div>
    <div class="row row-flex row-center">
      {{club-link club=player.club class="player-ui-club on-dark"}}
    </div>
    
  </div>
  
  <div class="divider gap-md hidden-sm-up"></div>
  <div class="divider gap-2x hidden-xs"></div>

{{/if}}
    
{{#if singleMode}}
  
  {{#dash-tabs class="no-gap show-overflow" onTabChange=(action 'tabChanged') tabGroup="player" as |tabs|}}
    
    {{#tabs.list as |list|}}
      
      {{list.tab tab="player-info-panel" name-t="player.player" icon-class="icon-user icon-lg"}}
      
      {{list.tab tab="player-statistics-panel" name-t="buttons.statistics" icon-class="icon-chart-bar icon-lg"}}
      
      {{list.tab tab="player-history-panel" name-t="buttons.history" icon-class="icon-history icon-lg"}}
      
      {{list.tab tab="player-manage-panel" name-t="buttons.manage" icon-class="icon-wrench icon-lg tab-icon-straight tab-icon-flip" hide=(not playerIsOwned)}}
      
      {{list.tab tab="player-sale-panel" name-t="buttons.for-sale" icon-class="icon-tag icon-lg" hide=(not player.transfer)}}
      
    {{/tabs.list}}
      
    {{#tabs.content as |content|}}
    
      
      {{#content.tab id="player-info-panel"}}
        {{player-ui/player-info player=player singleMode=singleMode selectedTab=selectedTab waitForTab='player-info-panel'}}
      {{/content.tab}}
      
      
      {{#content.tab id="player-statistics-panel" noPadding=true}}
        {{player-ui/player-stats selectedTab=selectedTab waitForTab='player-statistics-panel' stats=stats player=player}}
      {{/content.tab}}
      
      
      {{#content.tab id="player-history-panel"}}
        {{player-ui/player-history history=history player=player}}
      {{/content.tab}}
      
      
      {{#content.tab id="player-manage-panel"}}
        {{player-ui/player-manage player=player isOnScreen=(is 'player-manage-panel' selectedTab)}}
      {{/content.tab}}
      
      
      {{#content.tab id="player-sale-panel"}}
        {{player-ui/player-sale player=player}}
      {{/content.tab}}
      
      
    {{/tabs.content}}
    
  {{/dash-tabs}}

{{else}}

  <div class="dash-box no-gap show-overflow">
    
    {{#link-to 'players.player' player.id class="player-ui-title-link btn-events"}}
      <div class="player-ui-title-panel">
        <h2 class="player-ui-title">{{player.name}}</h2>
      </div>
      <div class="player-avatar player-avatar-ui"></div>
    {{/link-to}}

    {{player-ui/player-info player=player singleMode=singleMode}}
    
  </div>
  
{{/if}}