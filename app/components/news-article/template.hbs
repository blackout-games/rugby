{{page-header title=model.title images="rugby" route=model.title }}


<div class="row">
  <div class="col-lg-8 dash-col">
    <div class="dash-box">
            
      {{back-button default="dashboard" class="gap-md"}}
      
      <article>
        
        <div class="news-date gap-2x">
          {{date-ui date=model.date class="news-date"}}
          {{#if model.author}}
            by 
            {{#link-to "managers.manager" model.author.id class="nowrap"}}{{model.author.username}}{{/link-to}}
          {{/if}}
          {{#if model.country}}
            in 
            {{#link-to "countries.country" model.country.id class="nowrap"}}{{model.country.name}}{{/link-to}}
          {{/if}}
        </div>
        
        {{markdown-to-html markdown=model.fullBody 
          strikethrough=true
          literalMidWordUnderscores=true
          simplifiedAutoLink=true}}
        
      </article>
      
    </div>
  </div>
</div>