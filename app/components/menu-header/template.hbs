<div class="settings-cog">
  <div class="standalone-bumper"></div>
<a {{action "toggleSettings"}} class="btn-a"><i class="icon-cog" aria-label="Settings"></i></a>
  
</div>

<div class="standalone-bumper"></div>

{{#if session.isAuthenticated}}
  
  
  <div class="row">
    <div class="col-fixed">
      <div class="manager-avatar manager-avatar-menu"></div>
    </div>
    <div class="col-flex">
      <div class="menu-manager-text">
        {{session.manager.username}}
        <a {{ action 'invalidateSession' }} class="menu-logout btn-a"> &bullet; {{t 'buttons.logout'}}</a>
      </div>
    </div>
  </div>
  
  
  <div>
    <div class="club-avatar club-avatar-menu"></div>
    
    <div class="menu-club-text">
      {{currentClub.name}}
    </div>
  </div>
  
  
{{else}}
  
  <div class="menu-header-login">
    {{#link-to "login" class="btn btn-ghost white menu-login-buttons" tagName="button"}}Login{{/link-to}}
    
    {{#loader-button action="loginWithFacebook" class="btn btn-fb menu-fb-login-button menu-login-buttons" spinnerColor="fb"}}<i class="icon-facebook"></i>&nbsp;{{/loader-button}}
  </div>
  
{{/if}}

{{!#fast-button action="goAction"}Go{{/fast-button}}