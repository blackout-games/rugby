{{#component 'dash-tabs/tabs-list'
    isOnScreen=isOnScreen
    selectTab=(action 'selectTab')
    registerTab=(action 'registerTab')
    deregisterTab=(action 'deregisterTab')
    selectedTab=(readonly selectedTab)
    debug=debug as |list|}}

  {{#component 'dash-tabs/tabs-content'
    tabGroup=tabGroup
    tabRoute=tabRoute
    tabChanged=(action 'selectTab')
    receiveTabs=(action 'receiveTabs')
    tabRegistration=(action 'receiveTabRegistration')
    selectedTab=(readonly selectedTab) as |content|}}
    
    {{yield (hash
      list=list.list
      content=content.content
    )}}

  {{/component}}

{{/component}}
